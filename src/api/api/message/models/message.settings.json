{
  "kind": "collectionType",
  "collectionName": "messages",
  "info": {
    "name": "message"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "content": {
      "type": "text",
      "required": true
    },
    "whatsapp_group": {
      "model": "whatsapp-group",
      "via": "messages"
    },
    "tags": {
      "collection": "tag",
      "via": "messages"
    },
    "author": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "string",
      "required": true
    },
    "media": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "links": {
      "type": "json",
      "required": true
    },
    "hasLinks": {
      "type": "boolean",
      "default": false,
      "required": false
    }
  }
}
